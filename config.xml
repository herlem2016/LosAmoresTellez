<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.softronel.safraamorestellez" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Los Amores Tellez</name>
  <description>
    Sistema de Administraci√≥n para Condominios y Fraccionamientos
  </description>
  <author email="herlem.kx@gmail.com" href="softronel.com.mx">
    Softronel Team
  </author>
  <icon src="img/icon.jpg" />    
  <platform name="android">	
    <resource-file src="google-services.json" target="app/google-services.json" />
  </platform>
  <platform name="ios">
	  <resource-file src="GoogleService-Info.plist" />
	</platform>
	
	<icon src="img/icon.jpg" platform="ios" width="57" height="57" />
	<icon src="icon@2x.png" platform="ios" width="114" height="114" />

	<!-- iPad -->
	<icon src="img/icon.jpg" platform="ios" width="72" height="72" />
	<icon src="img/icon.jpg" platform="ios" width="144" height="144" />

	<!-- iPhone Spotlight and Settings Icon -->
	<icon src="img/icon.jpg" platform="ios" width="29" height="29" />
	<icon src="img/icon.jpg" platform="ios" width="58" height="58" />

	<!-- iPad Spotlight and Settings Icon -->
	<icon src="img/icon.jpg" platform="ios" width="50" height="50" />
	<icon src="img/icon.jpg" platform="ios" width="100" height="100" />
    
  <platform name="ios">	
    <resource-file src="google-services.json" target="app/google-services.json" />
  </platform>
  
  <preference name='phonegap-version' value='cli-9.0.0' />
  <preference name="android-targetSdkVersion" value="28" />
  
  <preference name='pgb-builder-version' value='2' />
  <plugin name="cordova-plugin-fcm-with-dependency-updated-apns" spec="~1.2.0" source="npm" />   
  <plugin name="cordova-plugin-inappbrowser" source="npm" version="1.0.1" />
  <gap:plugin name="cordova-plugin-whitelist" source="npm" />
  <plugin name="cordova-plugin-image-picker"  source="npm" />
  <plugin name="cordova-plugin-file-transfer" source="npm" />
  <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
  <plugin name="cordova-plugin-badge"/>
  <plugin name="cordova-plugin-device"/>
  <plugin name="cordova-plugin-file"/>
  <plugin name="cordova-plugin-file-opener2"/>
  <plugin name="cordova-plugin-autostart@2.3.0"/> 
  <plugin name="cordova-plugin-android-permissions@1.0.2"/> 
  <plugin name="cordova-plugin-local-notifications-mm"/> 
  <plugin name="cordova-plugin-background-mode"/>  
  <preference name="orientation" value="portrait" />
  <content src="index.html" />
  <allow-intent href="*" />
  <access origin="*" />
  <allow-navigation href="*" /> 
  
  <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>
	
</widget>
