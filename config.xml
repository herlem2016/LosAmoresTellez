<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.test.ios" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
  <name>Los Amores Tellez</name>
  <description>
    Sistema de Administraci√≥n para Condominios y Fraccionamientos
  </description>
  <author email="herlem.kx@gmail.com" href="softronel.com.mx">
    Softronel Team
  </author>   
	<icon src="www/img/icon.jpg" />
  <platform name="android">	 
    <resource-file src="google-services.json" target="app/google-services.json" />
  </platform>
	
	<platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
  
  <preference name='phonegap-version' value='cli-9.0.0' />
  <preference name="android-targetSdkVersion" value="28" />
  
  <plugin name="cordova-plugin-fcm-with-dependency-updated-apns" spec="~1.2.0" source="npm" />   
  <gap:plugin name="cordova-plugin-whitelist" source="npm" />
  <plugin name="cordova-plugin-image-picker"  source="npm" />
  <plugin name="cordova-plugin-file-transfer" source="npm" />
  <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
  <plugin name="cordova-plugin-badge"/>
  <plugin name="cordova-plugin-device"/>
  <plugin name="cordova-plugin-file"/>
  <plugin name="cordova-plugin-file-opener2"/>
  <plugin name="cordova-plugin-autostart@2.3.0"/> 
  <plugin name="cordova-plugin-android-permissions@1.0.2"/> 
  <plugin name="cordova-plugin-local-notifications-mm"/> 
  <plugin name="cordova-plugin-background-mode"/>  
  
  
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-media" source="npm" spec="~2.2.0" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
  
  
  
  <preference name="orientation" value="portrait" />
  <content src="index.html" />
  <allow-intent href="*" />
  <access origin="*" />
  <allow-navigation href="*" /> 
  
  <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>
	
</widget>
